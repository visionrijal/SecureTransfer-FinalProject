<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Line?>

<ScrollPane styleClass="registration-scroll" 
            stylesheets="/styles/registration.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.securetransfer.controller.ui.RegistrationController"
            fitToWidth="true" 
            fitToHeight="true">
    
    <VBox spacing="25" alignment="CENTER" 
          styleClass="registration-container">
        
        <padding>
            <Insets top="40" right="50" bottom="40" left="50"/>
        </padding>

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="8">
            <Text styleClass="title-text" text="âœ¨ Create Account"/>
            <Text styleClass="subtitle-text" text="Join SecureTransfer and start sharing files securely"/>
        </VBox>
        
        <!-- Registration Form Card -->
        <VBox styleClass="registration-form" alignment="CENTER">
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username" styleClass="input-label"/>
                <TextField fx:id="usernameField" 
                          promptText="Choose a username"
                          styleClass="input-field"/>
                <Label fx:id="usernameErrorLabel" styleClass="error-label" managed="false" visible="false"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password" styleClass="input-label"/>
                <PasswordField fx:id="passwordField" 
                              promptText="Create a password"
                              styleClass="input-field"
                              onKeyReleased="#checkPasswordStrength"/>
                <Label fx:id="passwordStrengthLabel" styleClass="password-strength-label" managed="false" visible="false"/>
            </VBox>
            
            <!-- Password Strength Indicator -->
            <VBox styleClass="password-strength-container" fx:id="strengthContainer" 
                  managed="false" visible="false">
                <HBox styleClass="strength-bars">
                    <Region fx:id="strengthBar1" styleClass="strength-bar"/>
                    <Region fx:id="strengthBar2" styleClass="strength-bar"/>
                    <Region fx:id="strengthBar3" styleClass="strength-bar"/>
                    <Region fx:id="strengthBar4" styleClass="strength-bar"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
            
            <!-- Confirm Password Field -->
            <VBox spacing="5">
                <Label text="Confirm Password" styleClass="input-label"/>
                <PasswordField fx:id="confirmPasswordField" 
                              promptText="Confirm your password"
                              styleClass="input-field"
                              onKeyReleased="#validatePasswordMatch"/>
                <Label fx:id="matchIndicator" styleClass="password-match-label" managed="false" visible="false"/>
            </VBox>
            
            <!-- Error/Success Messages -->
            <Label fx:id="errorLabel" styleClass="error-label" 
                   managed="false" visible="false"/>
            
            <Label fx:id="successLabel" styleClass="success-label" 
                   managed="false" visible="false"/>
            
            <!-- Register Button -->
            <Button fx:id="registerButton" 
                    text="Create Account" 
                    styleClass="primary-button" 
                    onAction="#handleRegister"/>
            
            <!-- Divider -->
            <HBox styleClass="divider-container" alignment="CENTER">
                <Line styleClass="divider-line" endX="80"/>
                <Label styleClass="divider-text" text="or"/>
                <Line styleClass="divider-line" endX="80"/>
            </HBox>
            
            <!-- Back to Login -->
            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="back-text" text="Already have an account?"/>
                <Button fx:id="backButton" 
                        text="Back to Login" 
                        styleClass="link-button" 
                        onAction="#handleBack"/>
            </HBox>
            
            <!-- Security Badge -->
            <HBox styleClass="security-badge">
                <Label styleClass="security-text" text="ðŸ” End-to-End Encryption"/>
            </HBox>
        </VBox>
        
        <!-- Footer -->
        <VBox styleClass="footer-container">
            <Label styleClass="footer-text" text="By creating an account, you agree to our Terms of Service"/>
            <Label styleClass="footer-text" text="Â© 2025 SecureTransfer. All rights reserved."/>
        </VBox>
    </VBox>
</ScrollPane>